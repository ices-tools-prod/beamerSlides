\usepackage{listings}\lstset{basicstyle=\ttfamily,literate={~}{$\sim$}{2}}

\frenchspacing

% 0 Theme definitions

\setbeamertemplate{background}{
  \includegraphics[width=\paperwidth,height=\paperheight,keepaspectratio]{images/template-1.png}
  %\includegraphics[width=\paperwidth,height=\paperheight,keepaspectratio]{images/template-2.png}
  %\includegraphics[width=\paperwidth,height=\paperheight,keepaspectratio]{images/template-3.png}
}
\beamertemplatenavigationsymbolsempty

\setbeamerfont{title}{series=\bfseries}
\setbeamerfont{author}{size=\scriptsize,series=\bfseries}
\setbeamerfont{date}{size=\scriptsize,series=\bfseries}
\setbeamercolor{title}{fg=white}
\setbeamercolor{author}{fg=white}
\setbeamercolor{date}{fg=white}


\setbeamertemplate{title page}{
  \begin{picture}(0,0)
    \put(-28.5,-140){%
      \includegraphics[width=\paperwidth,height=\paperheight,keepaspectratio]{images/titlepage.png}
    }

  \put(0,-50){%
      \begin{minipage}[b][45mm][t]{226mm}
        \usebeamerfont{title}{\inserttitle\par}
      \end{minipage}
    }

  \put(0,-100){%
      \begin{minipage}[b][45mm][t]{226mm}
        \usebeamerfont{author}{\insertauthor\par}
      \end{minipage}
    }

  \put(0,-150){%
      \begin{minipage}[b][45mm][t]{226mm}
        \usebeamerfont{date}{\insertdate\par}
      \end{minipage}
    }

  \end{picture}
}

